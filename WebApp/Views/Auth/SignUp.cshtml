@using WebApp.Models.ViewModels


@model SignUpViewModel


@{
    ViewData["Title"] = "SignUp";
}
<div class="container d-flex flex-wrap justify-content-center  h-100 pt-5">
    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
    {

        <div class="alert">@ViewData["ErrorMessage"]</div>
    }


    <div class="w-100 align-self-end pt-1 pt-md-4 pb-4" style="max-width: 526px;">
        <h1 class="text-center text-xl-start">Create Account</h1>
        <p class="text-center text-xl-start pb-3 mb-3">Already have an account? <a style="color:#6366f1" asp-controller="Auth" asp-action="SignIn"> Sign in here.</a></p>
        

        <form method="post" asp-controller="Auth" asp-action="SignUp" novalidate>
            <div class="row">
                <div class="col-sm-6">
                    <div class="position-relative mb-4">
                        <label asp-for="FirstName" class="form-label fs-base">First name</label>
                        <input asp-for="FirstName" type="text" id="FirstName" class="form-control form-control-lg" required>
                        <span asp-validation-for="FirstName"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="position-relative mb-4">
                        <label asp-for="LastName" class="form-label fs-base">Last name</label>
                        <input asp-for="LastName" type="text" id="LastName" class="form-control form-control-lg" required>
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="position-relative mb-4">
                        <label asp-for="Eamil" class="form-label fs-base">Email</label>
                        <input asp-for="Eamil" type="email" id="email" class="form-control form-control-lg" required>
                        <span asp-validation-for="Eamil"></span>
                    </div>
                </div>
                <div class="col-12 mb-4">
                    <label asp-for="Eamil" class="form-label fs-base">Password</label>
                    <input asp-for="Password" type="password" id="password" class="form-control form-control-lg" required>
                    <span asp-validation-for="Password"></span>
                  
                </div>
                <div class="col-12 mb-4">
                    <label asp-for="ConfirmPassword" class="form-label fs-base">Confirm password</label>
                    <input asp-for="ConfirmPassword" type="password" id="ConfirmPassword" class="form-control form-control-lg" required>
                    <span asp-validation-for="ConfirmPassword"></span>
                  
                </div>
            </div>
            <div class="mb-4">
                <div class="form-check">
                    <input asp-for="TermsAndConditions" type="checkbox">
                   
                    <label asp-for="TermsAndConditions" class="form-check-label fs-base">I agree to <a style="color:#6366f1" href="#">Terms &amp; Conditions</a></label>
                     <span asp-validation-for="TermsAndConditions"></span>
                </div>
            </div>
            <button  type="submit" class="btn btn-primary shadow-primary btn-lg w-100">Sign up</button>
        </form>
      
    </div>
  
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")